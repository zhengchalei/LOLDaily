<Window x:Class="LOLDaily.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="LOLDaily" Height="450" Width="800">
    <Grid>
        <!-- WebView 控件 -->
        <wpf:WebView2 x:Name="WebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- 日志显示控件 -->
        <ListView x:Name="LogsListView" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
